<% include partial/head %>

	<body>
		<% include partial/nav %>
			<% include partial/product-modal %>
				<div class="container">
					<h5>
						<%= store.name.toUpperCase() %>
					</h5>
					<p>Public URL:
						<a href="/store/<%= store.link %>">
							<%= baseUrl %>/store/
								<%= store.link %>
						</a>
						<table class="striped">
							<thead>
								<tr>
									<th data-field="id">Item Name</th>
									<th data-field="name">Price</th>
									<th data-field="price">description</th>
								</tr>
							</thead>
							<tbody>
								<% storeItems.forEach(function (item) { %>
									<tr>
										<td title="<%= item.description %>">
											<%= item.productName %>
										</td>
										<td>
											<%= item.productPrice %>
										</td>
										<td>
											<%= item.description %>
										</td>
									</tr>
									<% }); %>
							</tbody>
						</table>
						<a class="waves-effect waves-light btn btn-large modal-trigger mtl" href="#productModal">Add Product</a>
				</div>
	</body>